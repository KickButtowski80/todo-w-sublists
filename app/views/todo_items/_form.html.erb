<div class="card">
   <div class="card-body">
        <%= form_with model: [@todo_list, @todo_list.todo_items.build], local: true do |form| %>

            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_field :description , class:' ' %>
            </div>
          
            <div class="form-check  form-check-inline">
              <%= form.label :completed ,class: 'form-check-input' %>
              <%= form.check_box :completed, class: "form-check-label"  %>
            </div>
          
            <div class="form-group">
              <%= form.label :status %>
               <%= form.collection_radio_buttons :status, [[:low, 'Low'] ,[:medium, 'Medium'],[:high, 'High'],[:urgent, 'Urgent']], :first, :last , class:' ' %>
            </div>          
            <div class="actions">
              <%= form.submit class: 'btn btn-primary'%>
            </div>
            
        <% end %>   
      
      </div>
</div>
   
