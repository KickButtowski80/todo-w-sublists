<%#= form_for([@todo_list, @todo_list.todo_items.build]) do |form| %>
 
<%= form_with model: [@todo_list, @todo_item] , action: 'edit' do |form| %>
  

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>

  <div class="field">
    <%= form.label :status %>
     <%= form.collection_radio_buttons :status, [[:low, 'Low'] ,[:medium, 'Medium'],[:high, 'High'],[:urgent, 'Urgent']], :first, :last %>
  </div>

  

  <div class="actions">
    <%= form.submit class: 'btn btn-primary'%>
  </div>
<% end %>
