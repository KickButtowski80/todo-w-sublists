  <h1>Todo Lists</h1>
  
  <table class='table table-border'>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col"><%= fa_icon "header", text: ""%> <span>Title</span></th>
        <th scope="col"><%= fa_icon "calendar", text: ""%><span>Date</span></%> </th>
        <th scope="col"></th>
      </tr>
    </thead>
  
    <tbody>
      <% current_user.todo_lists.each_with_index do |todo_list,index| %> 
        <tr>           
          <th scope="row"> <%= index += 1 %></th>
          <td><%= link_to  todo_list.todo_list, todo_list_todo_items_path(todo_list)%></td>
          <td><%= todo_list.date.strftime("%Y-%m-%d") %></td>
          <!--<td><%= link_to 'Edit', edit_todo_list_path(todo_list) %></td>-->
          <td><%= link_to 'Delete', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
     
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Todo List', new_todo_list_path , class: 'btn btn-primary'%>
 
